<%- include("partials/header"); %>
<h1>register players</h1>
<legend>choose number of players:</legend>
<button class="btn btn-primary" id="butt3">3 players</button>
<button class="btn btn-primary" id="butt4">4 players</button>
<button class="btn btn-primary" id="butt5">5 players</button>
<button class="btn btn-primary" id="butt6">6 players</button>

<form action="/register" method="POST">
    <legend>enter players' names in <strong>order of play</strong>:</legend>
  <div class="input-group">
    <span class="input-group-text">player 1</span>
    <input
      type="text"
      class="form-control"
      name="player1"
      autocomplete="off"
      value="Simon"
    />
  </div>
  <div class="input-group">
    <span class="input-group-text">player 2</span>
    <input
      type="text"
      class="form-control"
      name="player2"
      autocomplete="off"
      value="Mari"
    />
  </div>
  <div class="input-group">
    <span class="input-group-text">player 3</span>
    <input
      type="text"
      class="form-control"
      name="player3"
      autocomplete="off"
      value="Jan"
    />
  </div>
  <div class="input-group initialHide form4">
    <span class="input-group-text">player 4</span>
    <input type="text" class="form-control" name="player4" autocomplete="off" />
  </div>
  <div class="input-group initialHide form5">
    <span class="input-group-text">player 5</span>
    <input type="text" class="form-control" name="player5" autocomplete="off" />
  </div>
  <div class="input-group initialHide form6">
    <span class="input-group-text">player 6</span>
    <input type="text" class="form-control" name="player6" autocomplete="off" />
  </div>
  <legend>Who shuffles first?</legend>
  <div class="form-check form-check-inline">
    <input
      class="form-check-input"
      type="radio"
      id="randomShuffler"
      name="shuffler"
      value="random"
      checked="true"
    />
    <label class="form-check-label" for="randomShuffler">random</label>
  </div>
  <div class="form-check form-check-inline">
    <input
      class="form-check-input"
      type="radio"
      id="p1Shuffles"
      name="shuffler"
      value="1"
    />
    <label class="form-check-label" for="p1Shuffles">player 1</label>
  </div>
  <div class="form-check form-check-inline">
    <input
      class="form-check-input"
      type="radio"
      id="p2Shuffles"
      name="shuffler"
      value="2"
    />
    <label class="form-check-label" for="p2Shuffles">player 2</label>
  </div>
  <div class="form-check form-check-inline">
    <input
      class="form-check-input"
      type="radio"
      id="p3Shuffles"
      name="shuffler"
      value="3"
    />
    <label class="form-check-label" for="p3Shuffles">player 3</label>
  </div>
  <div class="form-check form-check-inline initialHide form4">
    <input
      class="form-check-input"
      type="radio"
      id="p4Shuffles"
      name="shuffler"
      value="4"
    />
    <label class="form-check-label" for="p1Shuffles">player 4</label>
  </div>
  <div class="form-check form-check-inline initialHide form5">
    <input
      class="form-check-input"
      type="radio"
      id="p5Shuffles"
      name="shuffler"
      value="5"
    />
    <label class="form-check-label" for="p5Shuffles">player 5</label>
  </div>
  <div class="form-check form-check-inline initialHide form6">
    <input
      class="form-check-input"
      type="radio"
      id="p6Shuffles"
      name="shuffler"
      value="6"
    />
    <label class="form-check-label" for="p6Shuffles">player 6</label>
  </div>
  
  <input type="hidden" id="count" name="playerCount" value="3" />
  <br>
  <button class="btn btn-danger" type="submit">start game</button>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="scripts/reg.js"></script>
<%- include("partials/footer"); %>
